<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_place_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_name"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toEndOf="@+id/tv_place_name_header"
        android:gravity="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_place_rating_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_place_name_header"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="@string/place_rating"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_place_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_place_name_header"
        android:layout_toEndOf="@+id/tv_place_rating_header"
        android:gravity="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

</RelativeLayout>